@import "nib"

border-color     = #dddddd
hover-background = #f5f5f5
even-background  = #ffffff
odd-background   = #f0f5ff
border-radius    = 4px

.mac-table-container
  border   1px solid border-color
  position relative
  clear    both

  .mac-table-loader
    position absolute
    top      50%
    left     50%

  .mac-table-row
    clear       both
    float       left
    white-space nowrap

    &.even
      background-color even-background
      &.bottom-bordered
        border-bottom 1px solid even-background

    &.odd
      background-color odd-background
      &.bottom-bordered
        border-bottom 1px solid odd-background

    .mac-table-cell
      text-align  left
      float       left

      .mac-cell
        &:hover
          background-color hover-background

  .mac-table-header, .mac-table-footer
    float         left
    background    linear-gradient(top, #f9f9fa, #ecedf0)
    box-shadow    inset 0 1px #fff
    border-bottom solid 1px #c6c8d0
    overflow-x    hidden
    width         100%

    .mac-table-header-cell
      float        left
      position     relative
      border-right solid 1px #ddd
      box-shadow   1px 0 0 0 #fff

      &.mac-table-locked-cell
        background #ffffff linear-gradient(top, #ffffff, #e6e6e6)

      .mac-table-caret
        cursor         pointer
        margin-left    5px
        border-left    4px solid transparent
        border-right   4px solid transparent
        position       absolute
        top            50%
        margin-top     -4px

        &.hide
          display none

        &.up
          border-bottom 4px solid #000
        &.down
          border-top    4px solid #000

    .mac-table-row:first-child
      .mac-cell
        border-top 0

    .mac-cell
      font-size     12px
      font-weight   bold

      &.reorderable
        cursor pointer

      &.mac-table-locked-cell
        position   absolute
        left       0px

      &.ui-sortable-placeholder
        background-color hover-background

      &.resizable
        border-right solid 1px #ddd
        box-shadow   1px 0 0 0 #fff

  .mac-table-body-wrapper
    overflow-y auto
    overflow-x hidden
    position   relative
    width      100%

    .mac-table-body, .mac-title-column
      position absolute

    .mac-table-body
      width      100%
      overflow   hidden
      overflow-x auto

    .mac-table-body-height
      position       absolute
      top            0px
      width          50px
      pointer-events none

  .mac-cell
    overflow   ellipsis
    width      100%
    text-align left

  .mac-table-transclude
    display none



